page{ 
 height: 100%;
} 
  
.logincontainer { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2;
 margin:0
} 
  
/*登录图片*/
.login-icon{ 
 flex: none; 
 text-align: center;
 margin-top:50px 
} 
 .login-img{ 
 width: 250rpx; 
 height: 90rpx;
}  
  
/*表单内容*/
.login-from { 
 margin-top: 50px; 
 flex: auto; 
 height:100%; 
} 
  
.inputView { 
 width:96%;
 margin-left: 2%;
 background-color: #fff; 
 line-height: 44px; 
 display: flex
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 10px; 
 width: 16px; 
 height: 14px
} 
  
.loginLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px;
} 
.inputText { 
 /* flex: block; 
 float: right;  */
 text-align: left; 
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px;
 /* width:65% */
} 
  
.line { 
 width: 90%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
 margin-left: 5%;
} 
/*按钮*/
.loginBtnView { 
 width: 90%; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
 margin-left: 5%
} 

.getPhoneView{
  margin-right:2%;
  text-align:center;
  height: 30px;
  margin-top: 3%
}
.getPhoneBtn{
  background-color:blue;
  color: #ffffff;
  text-align: center
}
.loginBtn { 
 background-color:blue;
 color:#ffffff;
 margin-top: 35px; 
}
