 @import "../../../common/common.wxss"; 
.dateView{
  display:flex;
  flex-direction: row;
  /* justify-content: center; */
  padding-top:10px
}

.curtime{
  text-align: center;
  width:30%;
}
.wholeMonth{
  color:blue;
  font-size: 12px;
  text-align: right;
  padding-right: 10px;
  width:35%;
}
.textarea{
  width:90%;
}
.leaveView{
  width:30%;
  padding-top:5px;
  justify-content:center
}

/* 表格样式 */
.table{
  border: 0px solid darkgray;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 14px
}
.td{
  display: flex;
  flex-direction:column;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.th{
  margin-top: 10px;
  display: flex;
  height: 3rem;
  align-items: center;
  justify-content: center;
  background-color: #dadada
}

.datepicker{
  border: solid 1px #ddd;
  background-color: #fafafa;
  text-align: center;
}

.totalAbs{
  display:flex;
  padding:10px 10px 0;
  font-size:12px;
  flex-wrap: wrap;
}
.staffNameView{
  color:blue;
  font-size: 12px;
  text-align:left;
  padding-left:10px;
  width:35%;
}