/* 表格样式 */
.table{
  border: 0px solid darkgray;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 14px
}
.td{
  display: flex;
  flex-direction:column;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
  align-items: center;
  justify-content: center;
}
