<view class="appcontainer">

  <view class="wx-cells">
    <view class="wx-cell"  data-route="../selfInfo/selfInfo" bindtap="navToPage">
      <view class='userAvatarUrl'>
        <open-data type="userAvatarUrl"></open-data>
